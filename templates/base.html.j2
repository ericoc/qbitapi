<!DOCTYPE html>
<html class="dark" data-bs-theme="dark" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="Eric O'Callaghan">
        <meta name="description" content="qBittorrent">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>qBitAPI</title>
        <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}" type="image/x-icon">
        <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
        <link rel="preconnect" href="https://cdn.jsdelivr.net">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {%- block scripts %}
        {%- endblock scripts %}
        <style>
            a { text-decoration: none; }
            #logo { height: 2.5rem; }
            #logo:hover { filter: opacity(75%); }
            .flash-error, .ratio-verylow { color: var(--bs-danger); }
            .flash-info, .ratio-high { color: var(--bs-info); }
            .flash-message, .flash-success, .ratio-done { color: var(--bs-success); }
            .flash-warning, .ratio-low { color: var(--bs-warning); }
        </style>
    </head>
    <body class="m-1 p-1">
        <header class="row container-fluid">
            <nav class="col navbar navbar-expand-lg">
                <a href="{{ url_for('index') }}">
                    <img alt="qBitAPI" class="navbar-brand" id="logo" src="{{ url_for('static', filename='icon.png') }}" title="qBitAPI">
                </a>
                <button class="m-1 navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle Navigation">
                    <span class="m-1 navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav nav-underline">
                        <li class="nav-item dropdown">
                            <a class="bi bi-menu-button nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Links
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item" title="Plex">
                                    <a class="bi bi-display dropdown-item nav-link" href="https://plex.home.ericoc.com/" target="_blank">
                                        Plex
                                    </a>
                                </li>
                                <li class="nav-item" title="Radarr">
                                    <a class="bi bi-film dropdown-item nav-link" href="https://radarr.home.ericoc.com/" target="_blank">
                                        Radarr
                                    </a>
                                </li>
                                <li class="nav-item" title="Sonarr">
                                    <a class="bi bi-tv dropdown-item nav-link" href="https://sonarr.home.ericoc.com/" target="_blank">
                                        Sonarr
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item" title="qBittorrent">
                            <a class="bi bi-box-arrow-up-right nav-link" href="https://qb.gaw.sh/" target="_blank">
                                qBittorrent
                            </a>
                        </li>
                        <li class="nav-item" title="vueTorrent">
                            <a class="bi bi-folder-symlink nav-link" href="https://gaw.sh/" target="_blank">
                                vueTorrent
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <main>
{%- with messages = get_flashed_messages(with_categories=True) %}
    {%- if messages %}
            <ul>
        {%- for category, message in messages %}
                <li class="flash-{{ category }} fw-bold">{{ message }}</li>
        {%- endfor %}
            </ul>
    {%- endif %}
{%- endwith %}
            <div class="container-fluid">
{%- block content %}
{%- endblock content %}
            </div>
        </main>
    </body>
</html>
